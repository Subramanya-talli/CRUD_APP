    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fa-solid fa-angles-left left-arrow"></i>All Users</a>
                </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark new-user">Upadte User</h2>
                <span class="text-light">Use the below form to update an account</span>
            </div>

            <form method="POST" id="update-user">
                <div class="new-user">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="name" value="<%= user.name %>" placeholder="John Joseph" required>
                    </div>
                    <div class="form-group">
                        <label for="email" class="text-light">Email</label>
                        <input type="email" name="email" value="<%= user.email%>" placeholder="johnjoseph@gmail.com" required>
                    </div>
                    <div class="form-group">
                        <label for="gender" class="text-light">Gender</label>
                        <div class="radio inline">
                            <input type="radio" id="radio1" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' :"" %>>
                            <label for="gender" class="text-light">Male</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio2" name="gender" value="Female"  <%= user.gender == 'Female' ? 'checked' :"" %>>
                            <label for="gender" class="text-light">Female</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="text-light">Status</label>
                        <div class="radio inline">
                            <input type="radio" id="radio3" name="status" value="Active"  <%= user.status == 'Active' ? 'checked' :"" %>>
                            <label for="status" class="text-light">Active</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio4" name="status" value="Inactive"  <%= user.status == 'Inactive' ? 'checked' :"" %>>
                            <label for="status" class="text-light">Inactive</label>
                        </div>
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark udpdate">Save</button>
                    </div>
            
                </div>
            </form>
           
        </div>
    </main>
    <!-- Main Site -->

